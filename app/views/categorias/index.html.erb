<h1 align="center"> Listado de las categorias </h1>
  <div align="center">
    <%= will_paginate %>
      <% @categorias.each do |categoria| %>
        <ul class="listing">
          <div class="row">
            <div class="well col-md-4 col-md-offset-4">
              <li class="articulo-titulo">
                <%= link_to "#{categoria.nombre}", categoria_path(categoria) %>
                <li>
                  <small>
                    <% if(categoria.articulos.count > 1) %>
                      <%= categoria.articulos.count %> articulos
                        <% else %>
                          <%= categoria.articulos.count %> articulo
                    <% end %>
                  </small>
                </li>
              </li>
            </div>
          </div>
        </ul>
      <% end %>
    <%= will_paginate %>  
  </div>