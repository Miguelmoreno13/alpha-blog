<h1 align="center">Editar categoria</h1>

<%= render 'compartido/errores', objeto: @categoria %>
    <%= form_for(@categoria, :url => categoria_path(@categoria), :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
        <%= f.label :nombre %>:
        </div>
        <div class='col-sm-8'>
          <%= f.text_field :nombre, class: "form-control", placeholder: "Ingrese nombre de categoria", autofocus: true %>
        </div>
      </div>
    
      <div class="center form-group">
        <div class="col-sm-offset-2 col-md-8">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
    <div class="center col-sm-4 col-md-offset-4">
    [ <%= link_to "Cancelar solicitud y volver a la lista de articulos", categorias_path %> ]
    </div>