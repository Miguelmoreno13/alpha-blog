<% if objeto.errors.any? %>
<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h2 class="panel-title">
            <% if(objeto.errors.count>1)  %>
            <%= objeto.errors.count %> Errores, No se puede guardar este articulo porque:
            <% else %>
            <%= objeto.errors.count %> Error, No se puede guardar este articulo porque:
            <% end %>
           </h2>
          <div class="panel-body">
            <ul>
              <% objeto.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>
<% end %>