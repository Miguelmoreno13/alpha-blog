<%= render 'compartido/errores', objeto: @usuario %>
<div class="container">
<div class='row'>
  <div class='col-md-12'>
    <%= form_for(@usuario, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
        <%= f.label :usuario %>:
        </div>
        <div class='col-sm-8'>
          <%= f.text_field :usuario, class: "form-control", placeholder: "Ingrese nombre de usuario", autofocus: true %>
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
          <%= f.label :email %>:
        </div>
        <div class='col-sm-8'>
          <%= f.email_field :email, class: "form-control", placeholder: "Ingrese su email" %>
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
          <%= f.label :password, 'Contraseña'%>:
        </div>
        <div class='col-sm-8'>
          <%= f.password_field :password, class: "form-control", placeholder: "Ingrese su contraseña actual" %>
        </div>
      </div>
      <% if logged_in? %>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
          <%= f.label :password_confirmation, 'Nueva contraseña' %>:
        </div>
        <div class='col-sm-8'>
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Ingrese nueva contraseña" %>
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
          <%= f.label :password_confirmation1, 'Repetir nueva contraseña' %>:
        </div>
        <div class='col-sm-8'>
          <%= f.password_field :password_confirmation1, class: "form-control", placeholder: "Repetir su nueva contraseña" %>
        </div>
      </div>
      <% end %>
      <div class="center form-group">
        <div class="col-sm-offset-2 col-md-8">
          <%= f.submit(@usuario.new_record? ? "Registrate" : "Actualizar tus datos", class: 'btn btn-primary btn-lg') %>
        </div>
      </div>
    <% end %>
    <div class="center col-sm-4 col-md-offset-4">
    [ <%= link_to "Cancelar solicitud y volver a la lista de articulos", articulos_path %> ]
    </div>  
  </div>
</div>
</div>