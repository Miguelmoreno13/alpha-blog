<h1 align="center">Registro de Blog</h1>

<%= render 'compartido/errores', objeto: @usuario %>

<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@usuario, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
        <%= f.label :usuario %>
        </div>
        <div class='col-sm-8'>
          <%= f.text_field :usuario, class: "form-control", placeholder: "Ingrese nombre de usuario", autofocus: true %>
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
          <%= f.label :email %>
        </div>
        <div class='col-sm-8'>
          <%= f.email_field :email, class: "form-control", placeholder: "Ingrese su email" %>
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
          <%= f.label :password %>
        </div>
        <div class='col-sm-8'>
          <%= f.password_field :password, class: "form-control", placeholder: "Ingrese su contraseÃ±a" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Registrate", class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
    [ <%= link_to "Cancelar solicitud y volver a la lista de articulos", articulos_path %> ]
    </div>  
  </div>
</div>