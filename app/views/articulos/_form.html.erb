<%= render 'compartido/errores', objeto: @articulo %>

<div class='center row'>
  <div class='col-xs-12'>
    <%= form_for(@articulo, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
        <%= f.label :titulo %>
        </div>
        <div class='col-sm-8'>
          <%= f.text_field :titulo, class: "form-control", placeholder: "Titulo del articulo", autofocus: true %>
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
          <%= f.label :descripcion %>
        </div>
        <div class='col-sm-8'>
          <%= f.text_area :descripcion, rows: 6, class: "form-control", placeholder: "Cuerpo del articulo" %>
        </div>
      </div>
      <div class="center form-group">
        <div class="col-sm-offset-2 col-md-8">
          <%= f.submit(@articulo.new_record? ? "Crear articulo" : "Actualizar articulo",class: 'btn btn-primary btn-lg') %>
        </div>
      </div>
    <% end %>
    <div class="col-sm-4 col-md-offset-4">
    [ <%= link_to "Cancelar solicitud y volver a la lista de articulos", articulos_path %> ]
    </div>  
  </div>
</div>