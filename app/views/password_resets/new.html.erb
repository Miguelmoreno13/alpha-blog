<div align="Center">
  <h1>Reset Password</h1>
</div>
    <%= form_tag password_resets_path, :method => :post do %>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
        <%= label_tag :email %>:
        </div>
        <div class='col-sm-8'>
          <%= text_field_tag :email, params[:email], class: "form-control", placeholder: "Ingrese su email", autofocus: true %>
        </div>
      </div>
      <br>
      <br>
      <div class="center form-group">
        <div class="col-sm-offset-2 col-md-8">
          <%= submit_tag "Enviar correo", class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
